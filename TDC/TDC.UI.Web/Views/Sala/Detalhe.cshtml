@model TDC.UI.Web.Models.Sala
@{
    ViewBag.Title = "Detalhe Sala";
}


<div class="page-header">
    <h1>Sala <small>organize as salas onde será ministrado as palestras</small></h1>
    <a href="@Url.Action("Index","Sala")" class="btn btn-sm btn-primary">Cadastrar</a>
</div>


<fieldset>

    <legend>Nova Sala</legend>
    <div class="form-group">
        <strong>Nome</strong> @Model.Nome
    </div>
    
</fieldset>
<hr />
<p>
    <a href="@Url.Action("Editar","Sala", new {Id=Model.Id} )" class="btn btn-sm btn-info ">Detalhe</a>
    <a href="@Url.Action("Cadastrar","Sala")" class="btn btn-sm btn-danger ">Voltar</a>
</p>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
