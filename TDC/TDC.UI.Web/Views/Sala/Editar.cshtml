@model TDC.UI.Web.Models.Sala
@{
    ViewBag.Title = "Editar Sala";
}


<div class="page-header">
    <h1>Sala <small>organize as salas onde será ministrado as palestras</small></h1>
    <a href="@Url.Action("Index","Sala")" class="btn btn-sm btn-primary">Cadastrar</a>
</div>

<form method="POST" action="">


    @Html.ValidationSummary(true)
    <fieldset>
        
        <input id="Id" name="Id" type="hidden" value="@Model.Id" />
                                     

        <legend>Nova Sala</legend>
        <div class="form-group">
            <label for="Nome">Nome da Sala</label>

            <input id="Nome" name="Nome" type="text" value="@Model.Nome" class="form-control" placeholder="Digite o nome da sala">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <hr />
        <p>
            <button type="submit" class="btn btn-sm btn-info">Salvar</button>
            <a href="@Url.Action("Index","Sala")" class="btn btn-sm btn-danger">Cancelar</a>
        </p>
    </fieldset>



</form>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
