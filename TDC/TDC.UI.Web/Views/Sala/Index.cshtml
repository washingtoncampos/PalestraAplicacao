@model IEnumerable <TDC.UI.Web.Models.Sala>  
@{
    ViewBag.Title = "Sala";
}

<div class="page-header">
    <h1>Sala <small>organize as salas onde será ministrado as palestras</small></h1>
    <a href="@Url.Action("Cadastrar","Sala")" class="btn btn-sm btn-primary">Nova Sala</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Salas Cadastradas
            </div>
            <div class="panel-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nome da Sala</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var x = 0;}
                        @foreach (var item in Model)
                        {
                            x++;

                            <tr>
                                <td style="width: 50px">@x</td>
                                <td><a href="@Url.Action("Detalhe","Sala", new { Id=item.Id} )">@item.Nome</a></td>
                                <td style="width: 100px">
                                    <a href="@Url.Action("Editar","Sala", new { Id=item.Id} )" class="btn btn-info btn-info">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                    <a href="@Url.Action("Excluir","Sala", new { Id=item.Id} )" class=" btn btn-danger btn-danger">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
